  <body>

    <%- include('nav.html')%>
    <% 
      if (typeof register !== "undefined") {%>
        <h1 class="text-center ml-2 my-3"> 사용자 : <%= register %>  </h1>
    <% } %>
    
      
    

      <h1 class="text-center ml-2 my-3"> 시무 훈련 평가 시스템  </h1>

      <h2 class="text-center ml-2 my-3"> 평가할 사람을 선택해주세요  </h2>

      <div class="container input-group mb-2">
        <input class="form-control" id="search-input">
        <button class="input-group-append btn btn-danger" id="search">검색</button>
      </div>

      <script src="https://code.jquery.com/jquery-1.12.4.js"></script>

      <script>
        // 검색데이터를 Get 요청으로 요청하는 방법 
        $('#search').click(function(e) {
          var 입력한값 =  $('#search-input').val();
          //alert('서치버튼 눌려져떠여' + 입력한값);
          window.location.replace('/search?value=' + 입력한값);
        });
      </script>

      <div class="container">
        <!-- aria-current="true" -->
        <div class="list-group">
          <% for (let i = 0 ; i < people.length ; i++) { %>
          <a href="/edit/<%= people[i]._id %>" class="list-group-item list-group-item-action">
            <P>글번호 : <%= people[i]._id %> </P>
            <h4>이름 : <%= people[i].name %> </h4>
            <P>기관 : <%= people[i].institution %> </P>
            <P>평가 횟수 : <%= people[i].counter %> </P>
            <button class="btn btn-info put" data-id="<%= people[i]._id %>">평가내용</button>
            <button class="btn btn-danger delete" data-id="<%= people[i]._id %>">삭제</button>
            <!-- <button class="btn btn-danger chat" data-id="<%= people[i]._id %>" data-id-user="<%= people[i].작성자 %>">채팅하기</button> -->
          </a>
          <% } %>
        </div>
      </div>

        <!-- 
        // AJAX는 서버랑 통신하게 해주는 JS 문법임
        // 장점 : [새로고침] 없이도 서버에 요청하는걸 도와주는 문법임 
        -->

        <!-- 
        // jQuery라는 문법을 이용하여 AJAX를 사용하게 된다. 
        // 그것을 위해서 부트스트랩에서 가져왔던(제일 밑에 있었던) script 링크를 AJAX의 위쪽으로 옮겨준다. 
        -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>

        <script>
          $('#search').click(function(e) {
            var 입력한값 =  $('#search-input').val();
            //lert('서치버튼 눌려져떠여' + 입력한값);
            window.location.replace('/search?value=' + 입력한값);
          });


          $('.delete').click(function(e){
            var 글번호 = e.target.dataset.id; 
            var 지금누른거 = $(this);

            $.ajax({
              method : 'DELETE',
              url : '/delete',
              data : {_id : 글번호 },
            }).done(function(결과){
              // 페이지를 강제로 새로고침해주세요 
              console.log('삭제 성공했다고 서버에서 응답이 왔어요!');
              지금누른거.parent('a').fadeOut();
            }).fail(function(xhr, textStatus, errorThrown){
              console.log(xhr, textStatus, errorThrown);
            });

          });

          $('.put').click(function(e){
            var 임시글번호 = e.target.dataset.id; 
            //var 방금누른거 = $(this);
            var 임시유알엘 = '/chart/' + 임시글번호;
            
            //console.log("글번호 : ", e.target.dataset.id);
            // console.log("임시유알엘 : ", 임시유알엘);
            //alert(e.target.dataset.id);
            //alert(임시유알엘);

            $.ajax({
              method : 'GET',
              url : 임시유알엘,
              data : {_id : 임시글번호 },
            }).done(function(결과){
              // 페이지를 강제로 새로고침해주세요 
              //alert('수정 페이지를 잘띄웠다고 서버에서 응답이 왔어요');
              //방금누른거.parent('a').fadeOut();
            }).fail(function(xhr, textStatus, errorThrown){
              console.log(xhr, textStatus, errorThrown);
            });
          });


          $('.chat').click(function(e){
            var 임시글번호 = e.target.dataset.id; 
            var 임시작성자 = e.target.dataset.idUser;
            //var 방금누른거 = $(this);
            
            //console.log(임시글번호, 임시작성자);
            //alert(임시작성자);

            $.ajax({
              method : 'POST',
              url : '/chat',
              data : {_id : 임시글번호, user : 임시작성자 },
            }).done(function(결과){
              // 페이지를 강제로 새로고침해주세요 
              //alert('수정 페이지를 잘띄웠다고 서버에서 응답이 왔어요');
              //방금누른거.parent('a').fadeOut();
            }).fail(function(xhr, textStatus, errorThrown){
              console.log(xhr, textStatus, errorThrown);
            });
          });
        </script>


