  <h4 class="container mt-4"><strong>챠트 보기</strong></h4>

  <canvas id="myChart"></canvas>

  <script>
    function drawRadarChart(labels, datasets) {
    var ctx = document.getElementById("myChart").getContext("2d");

    var data = {
        labels: labels,
        datasets: datasets,
    };

    var options = {
        // 추가적인 설정을 필요에 따라 지정할 수 있습니다.
    };

    var radarChart = new Chart(ctx, {
        type: "radar",
        data: data,
        options: options,
    });
    }

    // 함수를 호출하여 Radar 차트를 그립니다.
    var labels = ["항목1", "항목2", "항목3", "항목4", "항목5"];
    var datasets = [
    {
        label: "데이터1",
        data: [3, 5, 2, 4, 1],
        backgroundColor: "rgba(255, 99, 132, 0.2)",
        borderColor: "rgba(255, 99, 132, 1)",
        borderWidth: 1,
    },
    // 추가 데이터셋을 필요에 따라 설정할 수 있습니다.
    ];

    drawRadarChart(labels, datasets);
  </script>

