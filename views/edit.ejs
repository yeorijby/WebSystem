      <div class="container">
        <!-- aria-current="true" -->
        <div class="list-group">
          <label>[주관식 문항]</label>
          <% if (data.SE.length != 0) { %>
            <% for (let i = 0 ; i < data.SE.length ; i++) { %>
              <P> <%= i + 1 %>) <%= data.SE[i].LargeQusetion_Content %> </P>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
