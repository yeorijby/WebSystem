              <div class="row">
                <input type="text" name="<%= LQ_CODE %>"  placeholder="<%= LQ_CODE %>" value="">
              </div>                            
              <br>
              <br>  
              <br>              
            <% } %>
          <% } %>
          
        </div>
      </div>
<br>
<br>

